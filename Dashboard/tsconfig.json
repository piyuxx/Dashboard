{
  "compilerOptions": {
    "target": "ES2020", // Target ECMAScript version
    "useDefineForClassFields": true, // Emit ECMAScript standard-compliant class fields
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ], // List of library files to be included
    "module": "ESNext", // Specify module code generation
    "skipLibCheck": true, // Skip type checking of all declaration files
    /* Bundler mode */
    "moduleResolution": "node", // Use Node.js style module resolution
    "allowImportingTsExtensions": true, // Allow importing `.ts` files as extensions
    "resolveJsonModule": true, // Enable import JSON modules
    "isolatedModules": true, // Ensure each file is treated as a separate module
    "noEmit": true, // Do not emit output files (for type checking only)
    "jsx": "react-jsx", // Specify JSX mode for `.tsx` files
    /* Linting */
    "strict": true, // Enable all strict type-checking options
    "noUnusedLocals": true, // Report errors on unused local variables
    "noUnusedParameters": true, // Report errors on unused function parameters
    "noFallthroughCasesInSwitch": true // Report errors for fallthrough cases in switch statement
  },
  "include": [
    "src"
  ], // Specify files to include in compilation
  "references": [] // Reference another TypeScript project
}